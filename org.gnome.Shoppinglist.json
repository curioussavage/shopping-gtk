{
    "app-id" : "org.gnome.Shoppinglist",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "3.34",
    "sdk" : "org.gnome.Sdk",
    "command" : "shoppinglist",
    "finish-args" : [
        "--share=network",
        "--share=ipc",
        "--socket=x11",
        "--socket=wayland",
        "--filesystem=xdg-run/dconf",
        "--filesystem=~/.config/dconf:ro",
        "--talk-name=ca.desrt.dconf",
        "--env=DCONF_USER_CONFIG_DIR=.config/dconf"
    ],
    "build-options" : {
        "cflags" : "-O2 -g",
        "cxxflags" : "-O2 -g",
        "env" : {
            "V" : "1"
        }
    },
    "cleanup" : [
        "/include",
        "/lib/pkgconfig",
        "/man",
        "/share/doc",
        "/share/gtk-doc",
        "/share/man",
        "/share/pkgconfig",
        "*.la",
        "*.a"
    ],
    "modules" : [
        {
            "name": "libhandy",
            "buildsystem": "meson",
            "config-opts": [
                "-Dtests=false",
                "-Dexamples=false",
                "-Dglade_catalog=disabled",
                "-Dvapi=false"
            ],
            "sources": [{
                "type": "git",
                "url": "https://source.puri.sm/Librem5/libhandy.git",
                "tag": "v0.0.13"
            }]
        },
        {
            "name" : "shoppinglist",
            "buildsystem" : "meson",
            "config-opts" : [
                "--libdir=lib"
            ],
            "builddir" : true,
            "sources" : [
                {
                    "type" : "git",
                    "url" : "file:///home/awinn/projects/shopping-gtk"
                }
            ]
        }
    ]
}
